{
  "name": "syncy",
  "description": "One-way synchronization of directories with glob",
  "version": "2.0.1",
  "license": "MIT",
  "author": {
    "name": "Denis Malinochkin",
    "url": "canonium.com"
  },
  "repository": "mrmlnc/syncy",
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "cp-file": "3.1.0",
    "glob-parent": "3.0.1",
    "globby": "5.0.0",
    "mkdirp": "0.5.1",
    "rimraf": "2.5.2"
  },
  "devDependencies": {
    "mocha": "^2.5.3",
    "xo": "^0.17.0"
  },
  "scripts": {
    "test": "rimraf .tmp && xo && mocha --timeout=25000"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "keywords": [
    "directory",
    "dir",
    "files",
    "synchronization",
    "sync",
    "copy",
    "update"
  ],
  "xo": {
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "arrow-parens": [2, "always"],
      "babel/arrow-parens": 0,
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"],
      "generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
